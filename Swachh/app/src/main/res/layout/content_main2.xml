<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main2"
    android:background="@drawable/mat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srkrit.swachh.Main2Activity"
    tools:showIn="@layout/app_bar_main2">

<RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="Swachh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6" />

    <TextView
        android:text="For the better..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="60dp"
        android:textStyle="italic"
        android:textSize="18dp"
        android:fontFamily="sans-serif-thin"
        android:layout_marginEnd="60dp"
        android:id="@+id/textView9" />

    <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/textView9"
    android:layout_gravity="center"
    android:layout_marginTop="24dp"
    android:elevation="4dp"
    android:onClick="openChildMod"
    card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Report new Issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="5dp"
                android:textSize="24sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView10" />

            <TextView
                android:text="Click here to complain about an issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView11" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:onClick="openMyIssues"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="My Issues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="5dp"
                android:textSize="24sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView12" />

            <TextView
                android:text="Click here to see issues complained by you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView13" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/card_view1"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        android:onClick="openGuardianMod"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="My Reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="5dp"
                android:textSize="24sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView14" />

            <TextView
                android:text="Click here to see complaints received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/textView15" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>